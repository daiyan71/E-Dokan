card#form
  .card-header
    .head
      span.card-header-actions
  .card.m-0
    .card-body.p-0
      .filter-section

      .show-list
        .text-center
          = "Rating of "
          = link_to "#{@product.name}", product_details_path(product_id: @product)
        - if current_user.present?
          = simple_form_for @rating, html: {class: 'form'} do |f|
            = render partial: 'form', locals: {f: f}
        - else
          .m-2.text-center Sign in to Rate
          .m-2.text-center = link_to "Sign In", new_user_session_path
        - if @ratings.empty?
          .m-2.text-center No Rating for this product
          .m-2.text-center = link_to "Back to Product", product_details_path(@product)
        - else
          .text-center
            - @ratings.each do |rating|
              h3 = link_to rating.user.user_name, user_profile_path(rating.user)
              p = "Rating: #{rating.rating}"
              p = "Description:"
              = text_area_tag '', "#{rating.message}",cols: "50",  disabled: true
